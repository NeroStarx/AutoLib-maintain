<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.clovertech.autolib.views.ui.home.HomeFragment"
        android:label="Accueil"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailTache"
            app:destination="@id/detailTache"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_navigation_home_to_nav_vehicule_detail"
            app:destination="@id/nav_vehicule_detail"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/navigation_userProfil"
        android:name="com.clovertech.autolib.views.ui.userProfil.UserProfileFragment"
        android:label= "Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.clovertech.autolib.views.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.clovertech.autolib.views.ui.dashboard.DashboardFragment"
        android:label="Calendrier"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/detailTache"
        android:name="com.clovertech.autolib.views.ui.home.TaskDetailFragment"
        android:label="Détail"
        tools:layout="@layout/fragment_detail_task" >
        <action
            android:id="@+id/action_detailTache_to_ajouterMateriel"
            app:destination="@id/ajouterMateriel"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_detailTache_to_vehiculeFragment"
            app:destination="@id/nav_vehicule_detail"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/ajouterMateriel"
        android:name="com.clovertech.autolib.views.ui.home.AddMaterialFragment"
        android:label="Ajouter un Materiel"
        tools:layout="@layout/fragment_add_material" >
        <action
            android:id="@+id/action_ajouterMateriel_to_detailTache"
            app:destination="@id/detailTache"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.clovertech.autolib.views.ui.settings.SettingsFragment"
        android:label="Paramètres"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_nav_settings_to_themeFragment"
            app:destination="@id/themeFragment" />
    </fragment>
    <dialog
        android:id="@+id/themeFragment"
        android:name="com.clovertech.autolib.views.ui.settings.ThemeFragment"
        android:label="Theme"
        tools:layout="@layout/fragment_theme" />
    <fragment
        android:id="@+id/nav_panne"
        android:name="com.clovertech.autolib.views.ui.panne.PanneAddFragment"
        android:label="Signaler Panne"
        tools:layout="@layout/fragment_add_panne" />
    <fragment
        android:id="@+id/nav_vehicule_detail"
        android:name="com.clovertech.autolib.views.ui.vehiculedetail.VehiculeFragment"
        android:label="Vehicule details"
        tools:layout="@layout/fragment_vehicule" >
        <argument
            android:name="idVehicule"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>